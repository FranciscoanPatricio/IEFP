#include <stdio.h>

int main(){
    float far;
    float celsius;

    printf("Insira o valor da temperatura em fahrenheit: \n");
    scanf("%f", &far);

    celsius = (far -32 ) * (5.0 /9.0);

    if (celsius>= 25){
        printf("Está calor, pois está %f ºC.\n", celsius);
    }else{
        printf("Esta frio pois está %f ºC.\n", celsius);
    }
    
    return 0;
}
