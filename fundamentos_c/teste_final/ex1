//Escreva um programa em C que solicite ao utilizador um número inteiro e imprima se é par ou ímpar
#include <stdio.h>

int main(){

    int number;
    
    printf("Introduza um número: \n");
    scanf("%d", &number);

    if(number % 2 ==0){
        printf("O número %d é par.\n", number);
    }else{
        printf("O número %d é ímpar.\n", number);
    }
}
