int menor (int number, int number2){
    
    for (int i=0;i<3; i++){
        number = input (number);
        if(i ==0){
            number2 = number;
        }
        if (number<number2){
            number2 = number;
        }
    }
    return number2;
}

int input(int x){
    printf("Insira o numero: \n");
    scanf("%i", &x);
    return x;
}

int inputPotencia(int x){
    printf("Insira o expoente: \n");
    scanf("%i", &x);
    return x;
}


int menor (int number, int number2){
    
    for (int i=0;i<3; i++){
        number = input (number);
        if(i ==0){
            number2 = number;
        }
        if (number<number2){
            number2 = number;
        }
    }
    printf("O menor numero é %i", number2);
}

int input(int x){
    printf("Insira o numero: \n");
    scanf("%i", &x);
    return x;
}

int inputPotencia(int x){
    printf("Insira o expoente: \n");
    scanf("%i", &x);
    return x;
}


int main(){
    int a, b, c, d;
    int numeroMenor = menor(a,b);
    printf("%i", numeroMenor);

    int total =1;

    int number = input(c);
    int number2 = inputPotencia(d);

    for (int i=0; i<number2;i++){
         total = number * total;
        printf("%i", total);
    }
    printf("%i", total);

    return 0;
}
