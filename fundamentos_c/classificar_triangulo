#include <stdio.h>

int main(){
    int side1, side2, side3;
    /*Peça ao utilizador para inserir três lados de um triângulo em cm. 
    Indique se esse triângulo é isósceles, Equilátero ou escaleno*/
    printf("Insira as medidas dos 3 lados do triângulo: \n");
    scanf("%i%i%i", &side1, &side2, &side3);
  
    if(side1 == side2 && side2 == side3){
        printf("O triângulo é equilátero.\n");
    }else if(side1 == side2 || side2 == side3 || side1 == side3){
        printf("O triãngulo é isósceçes.\n");
    }else{
        printf("O triângulo é escaleno.\n");
    }
    return 0;
}
